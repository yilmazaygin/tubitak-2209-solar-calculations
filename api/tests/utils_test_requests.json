  "julian_day_basic": {
    "description": "Calculate Julian Date for a specific date and time",
    "endpoint": "/utils/julian-day",
    "request": {
      "year": 2025,
      "month": 4,
      "day": 15,
      "hour": 12,
      "minute": 30,
      "second": 0
    },
    "expected_result": "JD around 2460047.02"
  },
  
