  "notes": {
    "julian_day": [
      "Julian Date is continuous count of days since Jan 1, 4713 BC noon UTC",
      "Essential for astronomical calculations and solar position",
      "Valid from 1582 onwards (Gregorian calendar)",
      "Time is in UTC - convert local time before calling"
    ],
    "pressure": [
      "Atmospheric pressure decreases ~12% per 1000m elevation",
      "Important for accurate solar irradiance calculations",
      "Formula: P = P_sea * exp(-0.119*H - 0.0013*H²) where H is in km",
      "Standard sea level pressure: 1013.25 mbar (1 atm)"
    ],
    "solar_position": [
      "Zenith angle: 0° = sun directly overhead, 90° = horizon",
      "Elevation angle: 90° = directly overhead, 0° = horizon, negative = below horizon",
      "Relationship: elevation = 90° - zenith",
      "Earth-Sun distance varies ±3% throughout year (affects solar intensity)",
      "All times must be in UTC",
      "Negative elevation means sun is below horizon (nighttime)"
    ],
    "batch_calculation": [
      "Efficiently calculates multiple hours in single request",
      "Use for sun path diagrams and daily analysis",
      "Returns all calculations even if sun is below horizon",
      "Hour_step allows skipping hours (e.g., every 2 hours)"
    ],
    "use_cases": [
