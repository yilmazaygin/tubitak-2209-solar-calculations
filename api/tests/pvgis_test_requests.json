    "performance": [
      "⚠️ TMY endpoint: Very slow! 10-15 years of data can take 30-90 seconds",
      "⚠️ SeriesCalc with multi-year: Large responses, 10-30 seconds",
      "✅ Single year requests (2020-2020): Fast, 1-5 seconds",
      "✅ PVCalc, MRCalc, DRCalc: Usually fast, < 10 seconds",
      "For testing in Swagger UI, use single year ranges to avoid freezing"
    ],
    "databases": [
      "PVGIS-SARAH3: Satellite data for Europe, Africa, Middle East, parts of Asia/America",
      "PVGIS-SARAH: Older satellite data",
      "PVGIS-NSRDB: Americas",
      "PVGIS-ERA5: Global reanalysis data"
    ],
    "pv_technologies": [
      "crystSi: Crystalline silicon (most common)",
      "CIS: Copper indium selenide",
      "CdTe: Cadmium telluride",
      "Unknown: Generic"
